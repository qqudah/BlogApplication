@model IEnumerable<BlogApplication.Models.Domain.Blog>

@{
    ViewData["Title"] = "Blogs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Blog List</h2>
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded bg-white p-2">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Heading)</th>
                    <th>Page Title</th>
                    <th>Content</th>
                    <th>Created At</th>
                    <th>Author</th>
                    <th>Visible</th>
                    <th>Image</th>
                    <th>Tags</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="blogRow-@item.Id">
                        <td class="fw-semibold">@item.Heading</td>
                        <td>@item.PageTitle</td>
                        <td class="text-truncate" style="max-width:200px;">@item.Content</td>
                        <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>@item.Author</td>
                        <td>
                            @if (item.Visable)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageURL))
                            {
                                <img src="@item.ImageURL" alt="Image" class="img-thumbnail" style="max-width:100px;" />
                            }
                            else
                            {
                                <em class="text-muted">No image</em>
                            }
                        </td>
                        <td>
                            @if (item.Tags != null && item.Tags.Any())
                            {
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Tags
                                    </button>
                                    <ul class="dropdown-menu">
                                        @foreach (var tag in item.Tags)
                                        {
                                            <li><span class="dropdown-item">@tag.Name</span></li>
                                        }
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <em class="text-muted">No tags</em>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                            <button class="btn btn-sm btn-danger delete-blog" data-id="@item.Id">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".delete-blog").click(function () {
                var blogId = $(this).data("id");

                if (!confirm("Are you sure you want to delete this blog?")) return;

                $.ajax({
                    url: '@Url.Action("Delete", "Blog")',
                    type: 'POST',
                    data: { id: blogId },
                    success: function (response) {
                        if (response.success) {
                            $("#blogRow-" + blogId).fadeOut("slow", function () {
                                $(this).remove();
                            });
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("An error occurred while deleting the blog.");
                    }
                });
            });
        });
    </script>
}
