@model IEnumerable<BlogApplication.Models.Domain.Blog>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Add" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Heading)</th>
            <th>Page Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Author</th>
            <th>Visible</th>
            <th>Image URL</th>
            <th>Tags</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="blogRow-@item.Id">
                <td>@item.Heading</td>
                <td>@item.PageTitle</td>
                <td>@item.Content</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@item.Author</td>
                <td>@item.Visable</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageURL))
                    {
                        <img src="@item.ImageURL" alt="Image" style="max-width:100px; height:auto;" />
                    }
                    else
                    {
                        <em>No image</em>
                    }
                </td>
                <td>
                    @if (item.Tags != null && item.Tags.Any())
                    {
                        <select class="form-select">
                            <option selected>Click to view tags</option>
                            @foreach (var tag in item.Tags)
                            {
                                <option>@tag.Name</option>
                            }
                        </select>
                    }
                    else
                    {
                        <em>No tags</em>
                    }
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <button class="btn btn-sm btn-danger delete-blog" data-id="@item.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".delete-blog").click(function () {
                var blogId = $(this).data("id");

                if (!confirm("Are you sure you want to delete this blog?")) return;

                var button = $(this); 

                $.ajax({
                    url: '@Url.Action("Delete", "Blog")',
                    type: 'POST',
                    data: { id: blogId },
                    success: function (response) {
                        if (response.success) {
                           
                            $("#blogRow-" + blogId).remove();
                            alert(response.message);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("An error occurred while deleting the blog.");
                    }
                });
            });
        });
    </script>
}
