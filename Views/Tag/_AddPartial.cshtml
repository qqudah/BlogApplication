@model BlogApplication.Models.ViewModel.TagViewModel

<div class="container py-3">
    <h4 class="text-center mb-3">Add New Tag</h4>

    <form id="tagForm" method="post" asp-action="Add" asp-controller="Tag">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" name="Name" placeholder="Enter tag name" required asp-for="Name" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>
